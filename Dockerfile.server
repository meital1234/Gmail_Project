# Use a C++ base image
FROM gcc:latest

# Install CMake and any build dependencies
RUN apt-get update && \
    apt-get install -y cmake make python3 && \
    apt-get clean

# Set working directory
WORKDIR /app

# Copy everything
COPY . .

# Build the project
RUN mkdir -p build && cd build && cmake .. && make

# Default command to run the application
CMD ["./build/ServerApp"]