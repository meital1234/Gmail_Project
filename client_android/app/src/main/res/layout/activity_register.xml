<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registration"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/text_Color"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="4"
            android:progress="0"
            android:indeterminate="false"
            android:layout_marginBottom="16dp"/>

        <!-- switch between form stages -->
        <ViewFlipper
            android:id="@+id/stepFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Step 1: Name -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step1_name"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/firstNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName"
                    android:autofillHints="givenName"/>

                <EditText
                    android:id="@+id/lastNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName"
                    android:autofillHints="familyName"/>
            </LinearLayout>

            <!-- Step 2: Personal Info -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step2_personal_info"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/inputBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_birth_date"
                    android:inputType="date"
                    android:clickable="true"
                    android:focusable="true"
                    android:cursorVisible="false"
                    android:autofillHints="birthDate"/>

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:inputType="phone"
                    android:autofillHints="phone"
                    android:hint="@string/hint_phone_number"/>
            </LinearLayout>

            <!-- Step 3: Email -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step3_email"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:hint="@string/hint_email"/>
            </LinearLayout>

            <!-- Step 4: Password -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step4_password"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textPassword"
                    android:autofillHints="newPassword"
                    android:hint="@string/hint_password"/>

                <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword"
                    android:autofillHints="newPassword"
                    android:hint="@string/hint_confirm_password"/>
            </LinearLayout>

            <!-- Step 5: Profile Picture -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step5_profile_picture"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/pickImageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_image"/>

                <TextView
                    android:id="@+id/imageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_file_chosen"/>
            </LinearLayout>
        </ViewFlipper>

        <!-- navigation buttons -->
        <LinearLayout
            android:id="@+id/buttonsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back"
                android:enabled="false"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/next"/>
        </LinearLayout>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_red_dark"
            android:paddingTop="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
